@model MVCPresentationWithIdentity.Models.VolunteerListViewModel

@{
    ViewBag.Title = "Volunteers";
}
<meta charset="utf-8" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<h2 class="mt-4">Volunteers</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Role</th>
            <th scope="col">Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataObjects.Volunteer volunteer in Model.Volunteers)
        {
            <tr>
                <td><a href="#">@volunteer.GivenName @volunteer.FamilyName <i class="bi bi-box-arrow-up-right"></i></a></td>
                <td>@volunteer.VolunteerType</td>
                @switch (volunteer.Rating)
                {
                    case 1:
                        <td>&#9733;&#9734;&#9734;&#9734;&#9734;</td>
                        break;
                    case 2:
                        <td>&#9733;&#9733;&#9734;&#9734;&#9734;</td>
                        break;
                    case 3:
                        <td>&#9733;&#9733;&#9733;&#9734;&#9734;</td>
                        break;
                    case 4:
                        <td>&#9733;&#9733;&#9733;&#9733;&#9734;</td>
                        break;
                    case 5:
                        <td>&#9733;&#9733;&#9733;&#9733;&#9733;</td>
                        break;
                    default:
                        <td>&#9734;&#9734;&#9734;&#9734;&#9734;</td>
                        break;
                }
                <td><button onclick="@("window.location.href='" + @Url.Action("About", "Home") + "'");">Request</button></td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination justify-content-center">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("ViewVolunteers", new { page = x }))
</div>